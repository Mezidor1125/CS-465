<!DOCTYPE html>
<html>

<head>
	<!-- meta tag used as the viewport for the application depending on the device used (Mozilla, 2022, p. 1) -->
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- *attempt import from bootstrap to utilize resizing capabilities for header (Mark, 2021, p. 1)-->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

	<!-- style sheet used for css properties within the application (SNHU, 2023, p. 1) -->
	<link rel="stylesheet" href="css/style.css" type="text/css">

	<!-- cdn libraries/css used for different fonts used within the application (cdnjs, 2022, p. 1) -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

	<!-- *attempt import from bootstrap to utilize resizing capabilities for header (Mark, 2021, p. 1)-->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>

<body>
	<div id="background"> <!-- div for the page background (SNHU, 2023, p. 1) -->
		<div id="page"> <!-- div with the id equal to page (SNHU, 2023, p. 1) -->
			{{> header}} <!-- reference for the header partial template (SNHU, 2023, p. 1) -->


			<!-- title of the page utilizing the JSON format this.title (SNHU, 2023, p. 1) -->
			<p id="title">{{this.title}}</p>
			{{#with travelers.[0]}} <!-- travel label within the travel page (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->

			<!-- title of the page with the id header-travel located at the left side of screen (SNHU, 2023, p. 1) -->
			<h1 id="header-travel">{{this.header}}</h1>
			{{/with}}

			{{#with travelers.[1]}}
			<!-- editable list of stuff label within the travel page  (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->

			<!-- label for the editable list section (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->
			<p id="edit-label">{{this.edit}}</p>
			{{/with}}

			{{#with travelers.[2]}}
			<!-- implementation of the static to JSON methodology utilizing the previous screen label in travel page (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->

			<!-- link used to go back to the previous scree using window.history.back() (W3Schools, 2023, p. 1) -->
			<a id="previous-screen" href="#" onclick="window.history.back();"> {{this.previous}}</a>

			{{/with}}

			<div class="tab">
				{{#with travelers.[3]}}
				<!-- tab label for beach table within the travel page (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->
				<button class="table-travel active" onclick="openTable(event, 'Beaches')">{{this.beach}} {{counter}}</button>
				{{/with}}

				{{#with travelers.[4]}}
				<!-- tab label cruise table within the travel page  (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->
				<button class="table-travel" onclick="openTable(event, 'Cruises')">{{this.cruise}}
				</button>
				{{/with}}

				{{#with travelers.[5]}}
				<!-- tab label for mountain table within the travel page (MIT, 2021, p. 1);(SNHU, 2023, p. 1) -->
				<button class="table-travel" onclick="openTable(event, 'Mountains')">{{this.mountain}} 
					</button>
				{{/with}}

			</div>

			<!-- search bar utilized at the middle of the screen near the table for searching the table contents (SNHU, 2023, p. 1) -->
			<form action="/travel" class="travel-search" method="get">
				<input type="text" placeholder="search travel" onfocus="this.placeholder=''"
					onblur="this.placeholder='search travel'" style="padding-left: 25px;">
				<a href="/travel" id="search-bar-submit"><i class="fa fa-search travel-search-icon"></i></a>
			</form>

			{{#with travelers.[6]}}
			<!-- button which adds a new trip within the table located at the top right (SNHU, 2023, p. 1) -->
			<button type="submit" id="add-trip">{{this.addtrip}}</button>
			{{/with}}
			<!-- table used to display the beaches table content within the travel page (SNHU, 2023, p. 1) -->
			<table id="beaches-table" class="table-content">
				<!-- table header for the beaches table within the travel page (SNHU, 2023, p. 1) -->
				{{#each travelers.[7].tableheader}}
				<tr>
					<th>{{this.id}}</th>
					<th>{{this.name}}</th>
					<th>{{this.length}}</th>
					<th>{{this.start}}</th>
					<th>{{this.resort}}</th>
					<th>{{this.price}}</th>
					<th>{{this.description}}</th>
					<th></th> <!-- make sure extra space is created with invisible header (SNHU, 2023, p. 1) -->
				</tr>
				{{/each}}

				{{#each trips}}
				<!--implementing the rows of data within the beaches table within the travel page (SNHU, 2023, p. 1) -->
				<tr>
					<td><a href="../../api/trips/{{this.code}}"><img src="images/{{this.image}}" alt="Img"></a></td>
					<td>{{this.name}}</td>
					<td>{{this.length}}</td>
					<td>{{this.start}}</td>
					<td>{{this.resort}}</td>
					<td>{{this.perPerson}}</td>
					<td>{{this.description}}</td>

					<!-- populating the delete and edit cells within the table (SNHU, 2023, p. 1);(W3Schools, 2022, p. 1) -->
					<td class="no-selection" onclick="event.stopPropagation()"> <a href="javascript:void(0);"
							style="text-decoration:none; color">âŠ—</a></td>
				</tr>
				{{/each}}
			</table>

			<!-- table used to display the mountains table content within the travel page (SNHU, 2023, p. 1) -->
			<table id="mountains-table" class="table-content hidden">

				{{#each travelers.[7].tableheader}}
				<!-- table header for the mountains table within the travel page (SNHU, 2023, p. 1) -->
				<tr>
					<th>{{this.id}}</th>
					<th>{{this.name}}</th>
					<th>{{this.length}}</th>
					<th>{{this.start}}</th>
					<th>{{this.resort}}</th>
					<th>{{this.price}}</th>
					<th>{{this.description}}</th>
					<th></th> <!-- make sure extra space is created with invisible header (SNHU, 2023, p. 1) -->
				</tr>
				{{/each}}

				{{#each trips}}
				<!--implementing the rows of data within the beaches table within the travel page (SNHU, 2023, p. 1) -->
				<tr>
					<td><a href="../../api/trips/{{this.code}}"><img src="images/{{this.image}}" alt="Img"></a></td>
					<td>{{this.name}}</td>
					<td>{{this.length}}</td>
					<td>{{this.start}}</td>
					<td>{{this.resort}}</td>
					<td>{{this.perPerson}}</td>
					<td>{{this.description}}</td>
					<!-- populating the delete and edit cells within the table (SNHU, 2023, p. 1);(W3Schools, 2022, p. 1) -->
					<td class="no-selection" onclick="event.stopPropagation()"> <a href="javascript:void(0);"
							style="text-decoration:none;">âŠ—</a></td>
				</tr>
				{{/each}}
			</table>

			<!-- table used to display the cruises table content within the travel page (SNHU, 2023, p. 1) -->
			<table id="cruises-table" class="table-content hidden">

				{{#each travelers.[7].tableheader}}
				<!-- table header for the cruises table within the travel page (SNHU, 2023, p. 1) -->
				<tr>
					<th>{{this.id}}</th>
					<th>{{this.name}}</th>
					<th>{{this.length}}</th>
					<th>{{this.start}}</th>
					<th>{{this.resort}}</th>
					<th>{{this.price}}</th>
					<th>{{this.description}}</th>
					<th></th> <!-- make sure extra space is created with invisible header (SNHU, 2023, p. 1) -->
				</tr>
				{{/each}}

				{{#each trips}}
				<!--implementing the rows of data within the cruises table within the travel page (SNHU, 2023, p. 1) -->
				<tr>
					<td><a href="../../api/trips/{{this.code}}"><img src="images/{{this.image}}" alt="Img"></a></td>
					<td>{{this.name}}</td>
					<td>{{this.length}}</td>
					<td>{{this.start}}</td>
					<td>{{this.resort}}</td>
					<td>{{this.perPerson}}</td>
					<td>{{this.description}}</td>

					<!-- populating the delete and edit cells within the table (SNHU, 2023, p. 1);(W3Schools, 2022, p. 1) -->
					<td class="no-selection" onclick="event.stopPropagation()"><a href="javascript:void(0);"
							style="text-decoration:none;">âŠ—</a></td>
				</tr>
				{{/each}}
			</table>

			{{#with travelers.[9]}}
			<!-- reference to the previous and next table buttons within the application (SNHU, 2023, p. 1) -->
			<button id="previous-table">{{this.previous}}</button>
			{{/with}}
			{{#with travelers.[8]}}
			<!-- reference to the previous and next table buttons within the application (SNHU, 2023, p. 1) -->
			<button id="next-table">{{this.next}}</button>
			{{/with}}
			{{> footer}} <!-- reference to the footer partial within the application  (SNHU, 2023, p. 1) -->
		</div>
		<script src="javascripts/function-scripts.js"></script>
		<!-- script used for editing and formatting table within application (SNHU, 2023, p. 1) -->
	</div>
	</div>
</body>

</html>